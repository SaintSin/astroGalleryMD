---
import { type CollectionEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  entry: CollectionEntry<"galleries">;
}

export async function getStaticPaths() {
  const gallery = await getCollection("galleries");
  console.log("Galleries", gallery);
  return gallery.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
  console.log("props", entry);
}

const { galleryId } = Astro.props;
---

<section class="gallery">
  <p>Component Gallery ID: {galleryId}</p>
</section>
<style>
  .gallery {
    background: oklch(68.24% 0.187 236.12 / 89.82%);
    padding: 1rem;
  }
</style>
